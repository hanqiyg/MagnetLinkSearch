<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
            android:id="@+id/no"
            tools:text="no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/up"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
    />
    <TextView
            android:id="@+id/of"
            tools:text="of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/up"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/no"
            android:text="@string/of"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
    />
    <TextView
            android:id="@+id/total"
            tools:text="total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/up"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/of"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
    />
    <ImageView
            android:id="@+id/email"
            style="@style/buttons"
            android:src="@drawable/ic_email_black_24dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/share"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    />
    <ImageView
            android:id="@+id/share"
            style="@style/buttons"
            android:src="@drawable/ic_textsms_black_24dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/fav"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    />
    <ImageView
            android:id="@+id/fav"
            android:src="@drawable/ic_favorite_black_24dp"
            style="@style/buttons"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/file"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    />
    <ImageView
            android:id="@+id/file"
            android:src="@drawable/ic_insert_drive_file_black_24dp"
            style="@style/buttons"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/down"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
    />
    <ImageView
            android:id="@+id/down"
            android:src="@drawable/ic_cloud_download_black_24dp"
            style="@style/buttons"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
    />
</RelativeLayout>
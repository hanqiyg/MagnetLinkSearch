<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal">
    <TextView
            android:id="@+id/no"
            tools:text="no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/up"
            android:layout_margin="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
    />
    <TextView
            android:id="@+id/of"
            tools:text="of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/up"
            android:layout_margin="2dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/no"
            android:text="@string/of"
    />
    <TextView
            android:id="@+id/total"
            tools:text="total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/up"
            android:layout_margin="2dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/of"
    />
    <ImageView
            android:id="@+id/share"
            style="@style/buttons"
            app:srcCompat="@drawable/ic_textsms_black_24dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/fav"
    />
    <ImageView
            android:id="@+id/fav"
            app:srcCompat="@drawable/ic_favorite_black_24dp"
            style="@style/buttons"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/file"
    />
    <ImageView
            android:id="@+id/file"
            app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"
            style="@style/buttons"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/down"
    />
    <ImageView
            android:id="@+id/down"
            app:srcCompat="@drawable/ic_cloud_download_black_24dp"
            style="@style/buttons"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
    />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/background"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_title"/>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/bg_gradient"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
    />
    <scut.carson_ho.diy_view.SuperEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:ic_left_click="@drawable/ic_mode_edit_blue_24dp"
            app:ic_left_unclick="@drawable/ic_mode_edit_gray_24dp"
            app:left_x="0"
            app:left_y="0"
            app:left_width="60"
            app:left_height="60"

            app:ic_delete="@drawable/ic_cancel_black_24dp"
            app:delete_x="0"
            app:delete_y="0"
            app:delete_width="60"
            app:delete_height="60"

            app:lineColor_click="@color/colorAccent"
            app:lineColor_unclick="@color/gray"
            app:linePosition="1"

            android:inputType="text"
            android:hint="@string/keywords"
            android:singleLine="true"
            android:maxLength="15"
            android:textAlignment="center"
            android:ellipsize="end"
            android:imeOptions="actionSearch"
            android:id="@+id/et_search"
        />
    <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            layout="@layout/include_warning"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="test"
            android:id="@+id/tv_info"/>
    <Button android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/submit"
            android:drawableStart="@drawable/ic_search_black_24dp"
    />
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/bg_gradient"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="10dp"
    />
</LinearLayout>
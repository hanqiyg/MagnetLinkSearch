<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:minHeight="24dp"
                android:background="@drawable/underline_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_insert_drive_file_black_24dp"/>
    <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/icon"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/filename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="3"
                android:ellipsize="start"
                tools:text="filenamefilenamefilenafilenamefilenamefilenamefilenamefilenamefilenamefilenamefilenamefilenamefilenamefilenamemefilenamefilenamefilenamefilenamefilenamefilenamefilenamefilename"
        />
        <TextView
                android:id="@+id/filesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                android:layout_gravity="top|end"
                android:textAlignment="viewEnd"
                tools:text="999.00MB"
        />
    </LinearLayout>
</RelativeLayout>
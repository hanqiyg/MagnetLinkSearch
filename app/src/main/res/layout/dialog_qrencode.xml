<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
>
    <include layout="@layout/include_dialog_title"
             android:id="@+id/title"
    />
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/layout_qr"
    >
        <ImageView
                android:id="@+id/qrcode"
                android:layout_width="@dimen/qrcode_width"
                android:layout_height="@dimen/qrcode_width"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
        />
        <TextView
                android:id="@+id/app_desc"
                android:layout_below="@id/qrcode"
                android:layout_centerHorizontal="true"
                android:text="@string/short_app_description"
                style="@style/qrcode_info"
        />
        <TextView
                android:id="@+id/tv_name"
                android:layout_below="@id/app_desc"
                android:layout_centerHorizontal="true"
                tools:text="Very Long Name"
                style="@style/qrcode_info"
        />
        <TextView
                android:id="@+id/tv_time"
                android:layout_below="@id/tv_name"
                android:layout_centerHorizontal="true"
                tools:text="2019-10-10"
                style="@style/qrcode_info"
        />
        <TextView
                android:id="@+id/tv_count"
                android:layout_below="@id/tv_time"
                android:layout_centerHorizontal="true"
                tools:text="9 file(s)"
                style="@style/qrcode_info"
        />
        <TextView
                android:id="@+id/tv_size"
                android:layout_below="@id/tv_count"
                android:layout_centerHorizontal="true"
                tools:text="100.32 MB"
                style="@style/qrcode_info"
        />
    </RelativeLayout>
    <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/layout_qr"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="20dp"
              android:id="@+id/tv_snapshot"
              android:text="save"
    />
    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
    />
</RelativeLayout>